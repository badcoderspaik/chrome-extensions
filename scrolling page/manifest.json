{
  "manifest_version": 2,
  "version": "1.0",
  "name": "__MSG_name__",
  "description": "__MSG_about__",
  "icons": {
    "16": "img/icons/16.png",
    "48": "img/icons/48.png",
    "128": "img/icons/128.png"
  },
  "browser_action": {
    "default_title": "scroll buttons"
  },
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "scripts/Arrow.js",
        "scripts/Container.js",
        "scripts/page_scroller.js"
      ]
    }
  ],
  "options_page": "options.html",
  "permissions": [ "storage" ],
  "web_accessible_resources":["img/arrows/*.png"],
  "default_locale": "en"
}